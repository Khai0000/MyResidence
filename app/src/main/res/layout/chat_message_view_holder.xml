<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/timestamp_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:textColor="#B3B3B3"
        android:textSize="14sp"
        android:visibility="gone"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/left_chat_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="start"
            android:paddingHorizontal="4dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/left_chat_text_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/incoming_speech_bubble"
                android:lineSpacingExtra="2dp"
                android:maxWidth="250dp"
                android:minWidth="80dp"
                android:paddingLeft="20dp"
                android:paddingTop="4dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textAlignment="viewStart"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/left_chat_timestamp_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingHorizontal="10dp"
                android:textColor="#B3B3B3"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_chat_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="end"
            android:paddingHorizontal="4dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/right_chat_timestamp_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingHorizontal="10dp"
                android:textColor="#B3B3B3"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/right_chat_text_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/outgoing_speech_bubble"
                android:lineSpacingExtra="2dp"
                android:maxWidth="250dp"
                android:minWidth="80dp"
                android:paddingLeft="15dp"
                android:paddingTop="4dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="20dp"

                />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>