<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="2dp"> <!-- Set the desired bottom stroke width (2dp) -->
        <shape>
            <solid android:color="#B0BEC5" /> <!-- Transparent background color -->
        </shape>
    </item>
    <item android:bottom="2dp"> <!-- Set the top padding to counteract the bottom stroke width (2dp) -->
        <shape>
            <solid android:color="#2d2d2d" /> <!-- Color of the bottom stroke -->
        </shape>
    </item>
</layer-list>
