<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape>
            <solid android:color="#B3B3B3" /> <!-- Color of the border -->
            <corners android:radius="10dp" /> <!-- Adjust the radius value as needed -->
        </shape>
    </item>

    <!-- Background -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape>
            <solid android:color="#D9D9D9" /> <!-- Background color -->
            <corners android:radius="10dp" /> <!-- Match the same radius as the border -->
        </shape>
    </item>
</layer-list>
