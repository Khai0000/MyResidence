<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >



            <item>
                <shape android:shape="rectangle" >
                    <gradient
                        android:angle="0"
                        android:centerColor="#E3A012"
                        android:endColor="#E2C10F"
                        android:startColor="#E48514"
                        />

                    <stroke
                        android:width="2dp"
                        android:color="#00ffffff"
                        />
                    <corners android:radius="15dp"/>
                </shape>
            </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle" >
            <solid android:color="#2d2d2d" />
            <corners android:radius="15dp"/>
        </shape>
    </item>

</layer-list>

